<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.faustocheca.myapplication.MainActivity">





    <TextView
        android:id="@+id/text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_marginBottom="24dp"
        android:textColor="#000000"
        android:text="Inspírate con tu político favorito" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="@string/politico_prompt"
        android:entries="@array/spinner_options"
        android:layout_marginBottom="24dp"
        />



    <ImageView
        android:id="@+id/image_view"
        android:background="#feafea"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        />

    <Button
        android:id="@+id/button_NoMeGusta"
        android:text="No me gusta..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        />

    <Button
        android:id="@+id/button_humor"
        android:text="Un poco de humor..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        />

    <Button
        android:id="@+id/button_dimealgo"
        android:text="Dime Algo..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        />





</LinearLayout>
